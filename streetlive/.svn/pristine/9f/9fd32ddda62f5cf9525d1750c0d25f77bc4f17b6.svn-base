$(document).ready(function(){
	$(".owl-carousel").owlCarousel({
		dots: false,
		scrollPerPage: true,
		slideBy: 3,
		loop: false,
		navText: ["<",">"],
		responsive:{
			0: {
				items: 1,
				nav: false
			},
			720: {
				items: 2,
				nav: true
			},
			1080: {
				items: 3,
				nav: true
			}
		},
		autoplay: false
	});
	$(".owl-carousel").trigger('stop.owl.autoplay');
});